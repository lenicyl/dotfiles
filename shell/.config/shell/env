#!/bin/sh

# Universal Configuration
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_CACHE_HOME="$HOME/.cache"

export PATH="$HOME/.local/bin:$PATH"

# Load Machine Specific environment
# This could probably be more robust but i dont care for now
GENTOO_ENV="$HOME/.config/shell/gentoo_env"
PIER_ENV="$HOME/.config/shell/pier_env"

[ "$(hostname)" = "gentoo" ] && [ -f "$GENTOO_ENV" ] && . "$GENTOO_ENV"
[ "$(hostname)" = "pier"   ] && [ -f "$PIER_ENV"   ] && . "$PIER_ENV"
